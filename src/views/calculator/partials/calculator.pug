header
    .container-fluid
        nav.navbar.navbar-expand-lg.navbar-light.bg-light.shadow-sm.p-3.mb-5.bg-white.rounded
            a.navbar-brand(href='#')
                img(src='assets/PP_logo_h_100x26.png', alt='PAYPAL COMMISSIONS CALCULATOR')
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbar.collapse.navbar-collapse
                ul.navbar-nav.ml-auto.mt-2.mt-lg-0
                    li.nav-item.active
                        a.nav-link.btn.btn-outline-primary(href='#disqus_thread', target="_self", translate="COMMENTS")
                        span.sr-only (current)
.container
    section
        .row.justify-content-center
            .col-sm-12.col-lg-6
                .card
                    .card-header
                        .row
                            .col-sm-12.col-lg-4
                                img.d-none.d-md-block(src='assets/PP_logo_h_100x26.png', alt='PAYPAL COMMISSIONS CALCULATOR')
                            .col-sm-12
                                h4.pull-right.text-muted(translate="PAYPAL_COMMISSIONS_CALCULATOR")
                    .card-body.bg-info
                        .card-title
                            strong(translate="THE_COMMISSIONS")
                        .form-row.align-items-center
                            .col-sm-4.pb-2
                                .input-group
                                    .input-group-prepend
                                        .input-group-text
                                            i.fa.fa-percent(aria-hidden='true') 
                                    input.form-control(type='number', step='0.01', min='0.01', ng-model='vm.calc.percentage', aria-describedby='basic-addon1')
                            .col-sm-4.pb-2
                                .input-group
                                    .input-group-prepend
                                        .input-group-text 
                                            i.fa.fa-usd(aria-hidden='true')
                                    input.form-control(type='number', step='0.01', min='0.01', ng-model='vm.calc.commission', aria-describedby='basic-addon1')
                            .col-sm-4.pb-2
                                button.form-control.btn.btn-primary(type='button' ng-click='vm.init()' translate="RESET")
        .row.justify-content-center
            .col-sm-12.col-lg-6
                .card
                    .card-body.bg-info
                        .card-title
                            strong(translate="RECEIVE")
                        .form-group
                            .input-group
                                .input-group-prepend
                                    .input-group-text(translate="TO_RECEIVE")
                                input.form-control(type='number', step='0.0001', min='0.01', max='100000000.9999', ng-model='vm.calc.SToReceive',  aria-describedby='basic-addon1')
                        .form-group
                            .input-group
                                .input-group-prepend
                                    .input-group-text(translate="MUST_SEND")
                                input.form-control(type='text', ng-model='vm.calc.SToSend', aria-describedby='basic-addon1', readonly)
                        .form-group
                            .input-group
                                .input-group-prepend
                                    .input-group-text(translate="COMMISSION")
                                input.form-control(type='text', ng-model='vm.calc.SToComision', aria-describedby='basic-addon1', readonly)
                .card
                    .card-body.bg-info
                        .card-title.pt-3
                            strong(translate="IF_THEY_ARE_SENT")
                        .form-group
                            .input-group
                                .input-group-prepend
                                    .input-group-text(translate="IF_YOU_SEND")
                                input.form-control(type='number', step='0.0001', min='0.01', max='100000000.9999', ng-model='vm.calc.RToReceive', aria-describedby='basic-addon1')
                        .form-group
                            .input-group
                                .input-group-prepend
                                    .input-group-text(translate="YOU_RECEIVE")
                                input.form-control(type='text', ng-model='vm.calc.RToSend', aria-describedby='basic-addon1', readonly)
                        .form-group
                            .input-group
                                .input-group-prepend
                                    .input-group-text(translate="COMMISSION")
                                input.form-control(type='text', ng-model='vm.calc.RToComision', aria-describedby='basic-addon1', readonly)

footer
    .container
        .row.justify-content-center
            .col-sm-12.col-lg-6
                .row
                    .col-sm-2
                        i.fa.fa-html5.fa-lg.text-info(aria-hidden='true')
                    .col-sm-10.text-right            
                        a.twitter-follow-button(href='https://twitter.com/carlos_conexo', data-show-count='false') Follow 
                        | 
                        a.github-button(href='https://github.com/shades3002', aria-label='Follow @shades3002 on GitHub') Follow 
                        |
                        a.github-button(href='https://github.com/shades3002/PayPal-calculator-with-angularjs', aria-label='Star shades3002/PayPal-calculator-with-angularjs on GitHub') Star
                .row
                    hr
        .row.justify-content-center                
            .col-sm-12.col-lg-10.pt-4.mb-4
                h4(translate="COMMENTS")
                #disqus_thread.comments

